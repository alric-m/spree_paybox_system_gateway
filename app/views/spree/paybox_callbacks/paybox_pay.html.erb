<html>
  <head>
    <title>Paybox checkout</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  </head>
  <body>
    <div style="display: none;">
      <form id="payboxForm" method="POST" action="https://preprod-tpeweb.paybox.com/cgi/MYchoix_pagepaiement.cgi" enctype="application/x-www-form-urlencoded">
        <%= paybox_hidden_fields(:site => "1999888", :rang => "32",
        :identifiant => "107904482",
        :paybox => "https://preprod-tpeweb.paybox.com/cgi/MYchoix_pagepaiement.cgi",
        :backup1 => "https://preprod-tpeweb.paybox.com/cgi/MYchoix_pagepaiement.cgi",
        :backup2 => "https://preprod-tpeweb.paybox.com/cgi/MYchoix_pagepaiement.cgi",
        :total => (@order.total * 100).to_i.to_s,
        :devise => 978,
        :cmd => @order.number,
        :porteur => @order.email,
        :typepaiement => "CARTE",
        :typecarte => "CB",
        :typecarte => "VISA",
        :typecarte => "MASTERCARD",
        :retour => "amount:M;ref:R;auto:A;error:E;signature:K",
        :effectue => paybox_ipn_url,
        :refuse => paybox_ipn_url,
        :annule => paybox_ipn_url,
        :repondre_a => paybox_ipn_url) %>
        <input class="button primary" type="submit" value="Continuer" name="commit"></input>
      </form>

    </div>
    <script type="text/javascript">
      $(document).ready(function() {
        $('form#payboxForm').submit();
      });
    </script>
  </body>
</html>
